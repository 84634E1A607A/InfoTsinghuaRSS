# =============================================================================
# OAuth Configuration
# =============================================================================

# Enable/disable OAuth authentication (true/false)
OAUTH_ENABLED=true

# GitLab OAuth Configuration
# Get these from your GitLab application settings
# GitLab URL (default: https://gitlab.com, change for self-hosted instances)
GITLAB_URL=https://gitlab.com

# GitLab OAuth Application credentials
GITLAB_CLIENT_ID=your_gitlab_client_id_here
GITLAB_CLIENT_SECRET=your_gitlab_client_secret_here

# OAuth redirect URI (must match your GitLab app configuration)
GITLAB_REDIRECT_URI=http://localhost:8000/auth/callback

# Session secret for OAuth state protection
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=your_generated_session_secret_here
